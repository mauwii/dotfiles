# Top-level config
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

# Markdown
[*.md]
trim_trailing_whitespace = false

# JSON-Files
[*.{json,jsonc}]
insert_final_newline = false

# Python
[*.py]
indent_size = 4

# git config
[*.gitconfig]
indent_style = tab
indent_size = 4
insert_final_newline = false
