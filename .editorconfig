# All files
[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

# Markdown
[*.md]
trim_trailing_whitespace = false

# JSON-Files
[*.{json,jsonc}]
insert_final_newline = false

# git config
[*.gitconfig]
indent_style = tab

[Makefile]
indent_style = tab

[Dockerfile{,.*}]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2
