# All files
[*]
root = true
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Markdown
[*.md]
trim_trailing_whitespace = false

# JSON-Files
[*.{json,jsonc}]
insert_final_newline = false

# git config
[*.gitconfig]
indent_style = tab

# Makefiles
[Makefile]
indent_style = tab

# YAML
[*.{yml,yaml}]
indent_size = 2
indent_style = space

# Python
[*.py]
indent_size = 4
indent_style = space
