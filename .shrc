#!/bin/sh
# shellcheck shell=sh

# add shell functions
if [ -r ~/.functions ] && [ "${DOT_FUNCTIONS:-false}" != "true" ]; then
    # shellcheck source=.functions
    . ~/.functions
fi

# ensure .shrc is only loaded once
if [ "${DOT_SHRC}" = "true" ]; then
    debuglog "already loaded .shrc"
    return
else
    debuglog "loading .shrc"
fi

# load aliases
if [ -r ~/.aliases ]; then
    # shellcheck source=.aliases
    . ~/.aliases
fi

# Colourful manpages
export LESS_TERMCAP_mb=$'\E[01;31m'
export LESS_TERMCAP_md=$'\E[01;31m'
export LESS_TERMCAP_me=$'\E[0m'
export LESS_TERMCAP_se=$'\E[0m'
export LESS_TERMCAP_so=$'\E[01;44;33m'
export LESS_TERMCAP_ue=$'\E[0m'
export LESS_TERMCAP_us=$'\E[01;32m'
# Set to avoid `env` output from changing console colour
export LESS_TERMEND=$'\E[0m'

export LESS="--RAW-CONTROL-CHARS"

# enable cli color
export CLICOLOR="true"

# Preferred editor for local and remote sessions
if [ -n "${SSH_CONNECTION}" ]; then
    if validate_command nvim; then
        export EDITOR="nvim"
    else
        export EDITOR="nano"
    fi
else
    if validate_command code; then
        export EDITOR="code"
        export GIT_EDITOR="${EDITOR} -w"
    elif validate_command nvim; then
        export EDITOR="nvim"
    else
        export EDITOR="nano"
    fi
fi

DOT_SHRC="true"
