#!/bin/sh
# shellcheck disable=SC3003,SC3028,SC2154

# add shell functions
if [ -r "${HOME}/.functions" ] && [ "${DOT_FUNCTIONS:-false}" != "true" ]; then
    # shellcheck source=.functions
    . "${HOME}/.functions"
fi

# ensure .shrc is only loaded once
if [ "${DOT_SHRC}" = "true" ]; then
    debuglog "already loaded %s" "${BASH_SOURCE:-${0}}"
    return
else
    debuglog "loading %s" "${BASH_SOURCE:-${0}}"
fi

# load aliases
if [ -r "${HOME}/.aliases" ]; then
    # shellcheck source=.aliases
    . "${HOME}/.aliases"
fi

# install global brewfile
if validate_command brew \
    && [ -r "${HOME}/.Brewfile" ] \
    && [ ! -f "${HOME}/.Brewfile.lock.json" ] \
    && [ "${SKIP_BREW_BUNDLE}" = "false" ] \
    && [ "${MACOS}" = "1" ]; then
    brew bundle install --file "${HOME}/.Brewfile"
fi

# Colourful manpages
export LESS_TERMCAP_mb=$'\E[01;31m'
export LESS_TERMCAP_md=$'\E[01;31m'
export LESS_TERMCAP_me=$'\E[0m'
export LESS_TERMCAP_se=$'\E[0m'
export LESS_TERMCAP_so=$'\E[01;44;33m'
export LESS_TERMCAP_ue=$'\E[0m'
export LESS_TERMCAP_us=$'\E[01;32m'
# Set to avoid `env` output from changing console colour
export LESS_TERMEND=$'\E[0m'

export LESS="--RAW-CONTROL-CHARS"

# enable cli color
export CLICOLOR="true"

# Preferred editor for local and remote sessions
if [ -n "${SSH_CONNECTION}" ]; then
    if validate_command nvim; then
        export EDITOR="nvim"
    elif validate_command nano; then
        export EDITOR="nano"
    fi
else
    if validate_command code; then
        export EDITOR="code"
        export GIT_EDITOR="${EDITOR} -w"
    elif validate_command nvim; then
        export EDITOR="nvim"
    elif validate_command nano; then
        export EDITOR="nano"
    fi
fi

# set gem path
if validate_command gem && [ -d "${HOME}/.gem/ruby/2.6.0" ]; then
    export GEM_HOME="${HOME}/.gem/ruby/2.6.0"
fi
# export GEM_PATH="${HOME}/.gem/ruby/2.6.0:/System/Library/Frameworks/Ruby.framework/Versions/2.6/usr/lib/ruby/gems/2.6.0"
# fi

DOT_SHRC="true"
